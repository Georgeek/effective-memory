$grey_1= rgba(51, 51, 51, .5)
$grey_wrap= #ccc
$grey_wrap2= #a0a0a0
$grey_bg= #f5f5f5
$grey_bg2= #f2f2f2
$blue= rgba(67, 31, 242, .6)

body
	margin 0
	font-size 1em
	font-family 'Open Sans', Arial, sans-serif
	background #f2f2f2
	color #333 

.container
	margin 0 auto
	width 70%
a
	text-decoration none
	color #000
nav
	background-color $grey_1
	ul
		margin 0
		padding 0
		display flex
		flex-wrap wrap
		li
			// margin-right 10px
			padding-top 10px
			padding-bottom 10px
			list-style none
			text-align left
			a
				color #fff
				padding 10px
				&:hover
					color $blue
			&:first-child
				padding-left 0
				a
					padding-left 0
			&:last-child
				margin 0
				padding-right 0
				a
					padding-right 0

ul.nav-right
	justify-content flex-end
.wrap
	display flex
	justify-content space-between
	// align-items baseline

.logo
	margin 3px
	padding 10px
	width 15%
	height 35px
	background $grey_1
	text-align center
	color #fff
.button
	padding 20px 15px 10px 15px
	width 7%
	cursor pointer
	text-align center
	verical-align center
	&:hover
		background $blue

header
	background $grey_wrap
	form
		margin-left 20px
		width 100%
		display flex
	input
		margin-top 10px
		margin-bottom 5px
		padding 5px
		width 100%
		border none
		border-top-left-radius 3px
		border-bottom-left-radius 3px
		height 30px

main
	.block__carousel
		margin-top 15px
		margin-bottom 15px
		height 200px
		width 100%
		background $grey_wrap
	.shop__content
		display flex
		flex-direction row
		justify-content space-between
.catalog
	width 30.3%
	.wrap
		display flex
		flex-direction column
		.element
			margin-bottom 4px
			padding 10px
			height 35px
			width 80%
			display flex
			justify-content space-between
			list-style none
			background $grey_1
			&:hover
				background $blue
			span
				padding 0 10px
.popular
	width 69.7%
	.wrap
		display flex
		flex-direction row
		justify-content flex-start
		flex-wrap wrap
		.element
			margin 0 10px 10px 0
			width 233px
			height 270px
			background $grey_wrap

.carousel_2 {
	margin-top: 26px;
	color: #fff;
	overflow: hidden;
	position: relative;
	font-family: sans-serif;
	font-weight: 300;
	line-height: 1.61803398875em;
}

.carousel_2-item {
  opacity: 0;
  pointer-events: none;
  position: absolute;
  top: 0;
  transition: opacity 0.6s ease-in-out;
  width: 100%;
}

.carousel_2-active:checked + .carousel_2-item {
  opacity: 1;
  pointer-events: auto;
  position: static;
}

.carousel_2-item img {
  display: block;
  height: auto;
  width: 100%;
}

.carousel_2-controls {
  height: 100%;
  width: 100%;
}

.carousel_2-control {
  background: rgba(0, 0, 0, 0.2);
  cursor: pointer;
  font-size: 28px;
  height: 100%;
  line-height: 40px;
  text-align: center;
  transition: background 0.1s ease-in-out;
  width: 50%;
  z-index: 2;
}

.carousel_2-control:hover {
  background: rgba(0, 0, 0, 0.8);
}

.carousel_2-control.prev {
  float: left;
}

.carousel_2-control.next {
  float: right;
}

.carousel_2-caption {
  bottom: 15%;
  font-size: 120%;
  left: 20%;
  opacity: 0;
  right: 20%;
  text-align: center;
  text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.2);
  transition: opacity 0.1s ease-out;
  z-index: 2;
}

.carousel_2-active:checked + .carousel_2-item .carousel_2-caption {
  transition: opacity 0.6s ease-in;
  opacity: 1;
}

.carousel_2-indicators {
  bottom: 5%;
  left: 5%;
  list-style: none;
  margin: 0;
  padding: 0;
  right: 5%;
  text-align: center;
  z-index: 2;
}

.carousel_2-indicators li {
  display: inline-block;
}

.carousel_2-indicator {
  border-radius: 50%;
  cursor: pointer;
  display: block;
  font-size: 28px;
  line-height: 1;
  padding: 5px 10px;
  text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.2);
  transition: background 0.1s ease-in-out;
}

.carousel_2-indicator:hover {
  background: rgba(0, 0, 0, 0.8);
}

/* If you`re needing more than 3 banners, maybe you might be using another way to represent your info... ;-) */
#carousel_2-1:checked ~ .carousel_2-indicators .carousel_2-indicator[for="carousel_2-1"],
#carousel_2-2:checked ~ .carousel_2-indicators .carousel_2-indicator[for="carousel_2-2"],
#carousel_2-3:checked ~ .carousel_2-indicators .carousel_2-indicator[for="carousel_2-3"] {
  color: #007f7f;
}

@media (min-width: 768px) {
  .carousel_2-indicators {
	background: transparent;
  }
  .carousel_2-control {
	width: 5%;
  }
  .carousel_2-controls,
  .carousel_2-caption,
  .carousel_2-indicators {
	position: absolute;
  }
}
.skill-data
	&__block
		float left
		width 33%
		&__wrap
			margin-bottom 15px
		&__label
			position relative
			{$font_title}
		&__label:before
			position absolute
			left -25px
			width 19px
			height 20px
			content ''
			background url(../images/sprites/icons.png)
			background-position -31px -51px
		&__input
			display none
			&-span1
				position relative
				top 3px
			&-span2
				position relative
				top 6px
		&__input[type='checkbox']:checked + .skill-data__block__label:before
			width 19px
			height 20px
			background-position -2px -51px
